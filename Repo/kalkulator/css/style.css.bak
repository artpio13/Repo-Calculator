@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap');
*{
	font-family: 'Roboto', sans-serif;
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}
body{
	display: grid;
	justify-content: center;
	align-items: center;
	min-height: 100vh;
	background: linear-gradient(to left, #f69175, #9c5cd6);
}
.calculator{
	display: grid;
	grid-template-columns: repeat(4, 92px);
    grid-template-rows: minmax(40px, auto) repeat(6, 92px);
	justify-content: center;
	align-content: center;
	gap: 0px;
	background: #fff;
	border-radius: 6px;
	box-shadow: 10px 10px 20px rgba(0,0,0,0.3);
	text-align: center;
	font-weight: 200;
	font-size: 2rem;
}
.calculator > button{
	cursor: pointer;
	border: none;
	transition-duration: 0.7s;
}
.calculator > button:hover{
	background: rgb(0,0,0,0.7);
	color: #fff;
}
.display1{
	display: grid;
	grid-column: 1 / 5;
	justify-content: right;
	align-content: center;
	background: #000;
	border-radius: 5px 5px 0 0;
	font-size: 1.5rem;
	color: #bf8697;
	padding: 0 10px !important;
}
.display2{
	display: grid;
	grid-column: 1 / 5;
	justify-content: right;
	align-content: center;
	background: #000;
	font-size: 2.5rem;
	color: #fff;
	padding: 0 10px !important;
}
.percent, .plusminus, .clr{
	background-image: linear-gradient(to bottom right, #f7f7f7, #f1f1f1);
}
.equals{
	grid-column: 3 / 5;
	background: #e62f89;
	border-radius: 0 0 5px 0;
	color: #fff;
}
.divide{
	background: #9156e2;
	color: #fff;
}
.multiply{
	background: #8c51dd;
	color: #fff;
}
.minus{
	background: #894eda;
	color: #fff;
}
.plus{
	background: #8547da;
	color: #fff;
}
.coma, .zero, .one, .two, .three, .four, .five, .six, .seven, .eight, .nine{
	background-image: linear-gradient(to bottom right, #ffffff, #f4f4f4);
}
.zero{
	border-radius: 0 0 0 5px;
}